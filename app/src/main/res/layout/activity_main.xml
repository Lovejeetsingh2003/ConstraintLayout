<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_gl_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".05"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_gl_05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".05"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_gl_95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".95"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_gl_95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".95"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_gl_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".40"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_gl_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".60"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_gl_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".20"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_gl_80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".80"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_gl_45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".45"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_gl_55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".55"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_gl_35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".35"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_gl_65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".65"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_gl_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".30"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_gl_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".40"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_gl_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".60"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_gl_45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".45"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_gl_55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".55"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_gl_65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".65"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_gl_85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".85"/>


    <ImageView
        android:id="@+id/imgSpace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/space"
        app:layout_constraintEnd_toStartOf="@id/v_gl_35"
        app:layout_constraintStart_toStartOf="@id/v_gl_05"
        app:layout_constraintTop_toTopOf="@id/h_gl_5"
        app:layout_constraintBottom_toTopOf="@id/h_gl_30"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/rocket"
        android:id="@+id/imgRocket"
        app:layout_constraintStart_toEndOf="@id/v_gl_35"
        app:layout_constraintEnd_toStartOf="@id/v_gl_65"
        app:layout_constraintTop_toTopOf="@id/h_gl_5"
        app:layout_constraintBottom_toTopOf="@id/h_gl_30"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:id="@+id/imgRovers"
        android:src="@drawable/rovers"
        app:layout_constraintTop_toTopOf="@id/h_gl_5"
        app:layout_constraintEnd_toEndOf="@id/v_gl_95"
        app:layout_constraintStart_toEndOf="@id/v_gl_65"
        app:layout_constraintBottom_toTopOf="@id/h_gl_30"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSpace"
        android:layout_marginStart="8dp"
        android:text="@string/tvSpace"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/v_gl_05"
        app:layout_constraintTop_toBottomOf="@id/imgSpace"
        app:layout_constraintEnd_toStartOf="@id/v_gl_35"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvRocket"
        android:text="@string/tvRocket"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/v_gl_35"
        app:layout_constraintTop_toBottomOf="@id/imgRocket"
        app:layout_constraintEnd_toStartOf="@id/v_gl_65"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvRovers"
        android:text="@string/tvRover"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/v_gl_95"
        app:layout_constraintTop_toBottomOf="@id/imgRovers"
        app:layout_constraintStart_toEndOf="@id/v_gl_65"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:gravity="center"
        android:id="@+id/tvDca"
        android:paddingEnd="40dp"
        android:text="@string/tvDca"
        android:textColor="@color/black"
        android:background="@color/purple"
        android:textSize="20sp"
        android:fontFamily="sans-serif-black"
        app:layout_constraintEnd_toStartOf="@id/v_gl_45"
        app:layout_constraintStart_toEndOf="@id/v_gl_20"
        app:layout_constraintTop_toTopOf="@id/h_gl_40"
        app:layout_constraintBottom_toBottomOf="@id/h_gl_60" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:gravity="center"
        android:paddingStart="40dp"
        android:id="@+id/tvMars"
        android:text="@string/tvMars"
        android:textColor="@color/black"
        android:background="@color/purple"
        android:textSize="20sp"
        android:fontFamily="sans-serif-black"
        app:layout_constraintStart_toEndOf="@id/v_gl_55"
        app:layout_constraintEnd_toStartOf="@id/v_gl_80"
        app:layout_constraintTop_toTopOf="@id/h_gl_40"
        app:layout_constraintBottom_toBottomOf="@id/h_gl_60" />

    <ImageView
        android:id="@+id/imgReverse"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/reverse"
        app:layout_constraintBottom_toBottomOf="@id/h_gl_55"
        app:layout_constraintEnd_toEndOf="@id/v_gl_65"
        app:layout_constraintStart_toEndOf="@id/v_gl_35"
        app:layout_constraintTop_toTopOf="@id/h_gl_45" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/rbOver"
        android:id="@+id/rbOne"
        android:textColorHint="@color/black"
        android:textSize="30sp"
        android:background="@color/parrot"
        app:layout_constraintStart_toStartOf="@id/v_gl_05"
        app:layout_constraintTop_toBottomOf="@id/h_gl_65"
        app:layout_constraintBottom_toTopOf="@id/tvTraveller"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/tvTraveller"
        android:text="@string/tvTraveller"
        android:textColor="@color/black"
        android:background="@color/parrot"
        android:textSize="30sp"
        android:fontFamily="sans-serif-black"
        app:layout_constraintStart_toStartOf="@id/v_gl_05"
        app:layout_constraintTop_toBottomOf="@id/rbOne"
        app:layout_constraintBottom_toTopOf="@id/h_gl_85"/>

</androidx.constraintlayout.widget.ConstraintLayout>